{% extends 'base.html.twig' %}

{% block title %}Bar{% endblock %}
{% block nomBar %} {{ barLogged.nom }} {% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row d-flex justify-content-center">
            <div class="col-10 mt-5">
                <h1>Bar</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ bar.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ bar.nom }}</td>
                    </tr>
                    <tr>
                        <th>Contrasenya</th>
                        <td>{{ bar.contrasenya }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('bar_index') }}" class="btn btn-dark m-5"><i class="bi bi-arrow-left"></i></a>

                <a href="{{ path('bar_edit', {'id': bar.id}) }}" class="btn btn-success"><i class="bi bi-pencil"></i></a>

                {{ include('bar/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
