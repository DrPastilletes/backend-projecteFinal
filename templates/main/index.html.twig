{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<style>
    body{
        background-image:url('{{ '/img/bar.jpg' }}');
        background-attachment: fixed;
    }

    .vertical-center {
        min-height: 100%; /* Fallback for browsers do NOT support vh unit */
        min-height: 100vh; /* These two lines are counted as one :-)       */

        display: flex;
        align-items: center;
    }
</style>
    {% if arrayErrors != null %}
        <div class="alert alert-danger" role="alert">
            {{ arrayErrors }}
        </div>
    {% endif %}

    <div class="vertical-center">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-8">
                    <div class="p-3" style="background-color: #FFFFFF">
                        <div>
                            <h1>Login</h1>
                        </div>
                        <form action="{{ path('comprovarLogin') }}" method="post" class="paddingForm">
                            <div class="form-group">
                                <label for="usuari">Usuari</label>
                                <input type="text" class="form-control" id="usuari" name="usuari" placeholder="Entra l'usuari">
                                <small id="emailHelp" class="form-text recordatoriColor">No compartexis l'usuari ni la contrasenya
                                    amb ning√∫.</small>
                            </div>
                            <div class="form-group">
                                <label for="contra">Contrasenya</label>
                                <input type="password" class="form-control" id="contra" name="contra" placeholder="Contrasenya">
                                <input type="checkbox" class="m-1" onclick="veurePassword()"><label>Veure contrasenya</label>
                            </div>
                            <button type="submit" class="btn btn-secondary">Login</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script>
        function veurePassword() {
            var x = document.getElementById("contra");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>

{% endblock %}
