{% extends 'base.html.twig' %}

{% block title %}Taula index{% endblock %}
{% block nomBar %} {{ barLogged.nom }} {% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        <div class="col-10 mt-5">
    <h1>Llista Taules</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Identificador</th>
                <th>Ocupada</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for taula in taulas %}
            <tr>
                <td>{{ taula.id }}</td>
                <td>{{ taula.identificador }}</td>
                <td>{{ taula.ocupada ? 'Si' : 'No' }}</td>
                <td>
                    <a href="{{ path('taula_show', {'id': taula.id}) }}" class="btn btn-dark"><i class="bi bi-eye"></i></a>
                    <a href="{{ path('taula_edit', {'id': taula.id}) }}" class="btn btn-success"><i class="bi bi-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Encara no has creat cap taula!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('taula_new') }}" class="btn btn-success"><i class="bi bi-plus"></i></a>
        </div>
    </div>
</div>
{% endblock %}
