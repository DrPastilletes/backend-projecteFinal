{% extends 'base.html.twig' %}

{% block title %}Taula{% endblock %}
{% block nomBar %} {{ barLogged.nom }} {% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row d-flex justify-content-center">
            <div class="col-10 mt-5">
                <h1>Taula</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ taula.id }}</td>
                    </tr>
                    <tr>
                        <th>Identificador</th>
                        <td>{{ taula.identificador }}</td>
                    </tr>
                    <tr>
                        <th>Ocupada</th>
                        <td>{{ taula.ocupada ? 'Si' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>Accions</th>
                        <td><a href="{{ path('taula_edit', {'id': taula.id}) }}" class="btn btn-success"><i
                                        class="bi bi-pencil"></i></a>

                            {{ include('taula/_delete_form.html.twig') }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('taula_index') }}" class="btn btn-dark m-5"><i class="bi bi-arrow-left"></i></a>

            </div>
        </div>
    </div>

{% endblock %}
