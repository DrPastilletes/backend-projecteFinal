{% extends 'base.html.twig' %}

{% block title %}Categoria{% endblock %}
{% block nomBar %} {{ barLogged.nom }} {% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row d-flex justify-content-center">
            <div class="col-10 mt-5">
                <h1>Categoria</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ categorium.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ categorium.nom }}</td>
                    </tr>
                    <tr>
                        <th>Editar</th>
                        <td><a href="{{ path('categoria_edit', {'id': categorium.id}) }}" class="btn btn-success"><i
                                        class="bi bi-pencil"></i></a></td>
                    </tr>
                    <tr>
                        <th>Borrar</th>
                        <td>{{ include('categoria/_delete_form.html.twig') }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('categoria_index') }}" class="btn btn-dark m-5"><i class="bi bi-arrow-left"></i></a>




            </div>
        </div>
    </div>
{% endblock %}
