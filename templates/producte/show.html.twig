{% extends 'base.html.twig' %}

{% block title %}Producte{% endblock %}
{% block nomBar %} {{ barLogged.nom }} {% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row d-flex justify-content-center">
            <div class="col-10 mt-5">
                <h1>Producte</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ producte.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ producte.nom }}</td>
                    </tr>
                    <tr>
                        <th>Preu</th>
                        <td>{{ producte.preu }}</td>
                    </tr>
                    <tr>
                        <th>Categoria</th>
                        <td>{{ producte.categoria }}</td>
                    </tr>
                    <tr>
                        <th>Disponible</th>
                        <td>{{ producte.disponible ? 'Si' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>Accions</th>
                        <td><a href="{{ path('producte_edit', {'id': producte.id}) }}" class="btn btn-success"><i class="bi bi-pencil"></i></a>

                            {{ include('producte/_delete_form.html.twig') }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('producte_index') }}" class="btn btn-dark m-5"><i class="bi bi-arrow-left"></i></a>

            </div>
        </div>
    </div>
{% endblock %}
